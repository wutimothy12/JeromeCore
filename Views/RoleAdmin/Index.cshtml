@model IEnumerable<IdentityRole>

@section Header {
    <li><a href="/" title="Seattle Super Foods | Home">Home</a></li>
    <li class="selected"><a href="/Product/products" title="Seattle Super Foods | Products">Products</a></li>
    <li><a href="/Home/About" title="Seattle Super Foods | About">About</a></li>
    <li><a href="/Home/Contact" title="Seattle Super Foods | Contact">Contact</a></li>
    <li><a href="/Cart/index" title="Seattle Super Foods | Cart">Cart</a></li>
}
<div id="page">

    <div id="main-content_noside">

        <h4>Roles</h4>
        <p><a asp-controller="Admin" asp-action="Index">Back to Admin</a></p>


        <div asp-validation-summary="ModelOnly"></div>



        <table width="90%" align="center" class="tablelist">

            <tr><th>ID</th><th>Name</th><th>Users</th><th></th></tr>

            @if (Model.Count() == 0)
            {

                <tr><td colspan="4" class="text-center">No Roles</td></tr>

            }
            else
            {

                foreach (var role in Model)
                {

                    <tr>

                        <td>@role.Id</td>

                        <td>@role.Name</td>

                        <td identity-role="@role.Id"></td>

                        <td>

                            <form asp-action="Delete" asp-route-id="@role.Id" method="post">

                                <a asp-action="Edit"
                                   asp-route-id="@role.Id">Edit</a>

                                <button type="submit"
                                        class="listbtu">

                                    Delete

                                </button>

                            </form>

                        </td>

                    </tr>

                }

            }

        </table>

        <a asp-action="Create">Create</a>
    </div>
