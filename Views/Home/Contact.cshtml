@model JeromeCore.Models.ContactViewModel

@{
    ViewBag.Title = "Contact";
}

@section Header {
    <li><a href="/" title="Seattle Super Foods | Home">Home</a></li>
    <li><a href="/Product/products" title="Seattle Super Foods | Products">Products</a></li>
    <li><a href="/Home/About" title="Seattle Super Foods | About">About</a></li>
    <li class="selected"><a href="/Home/Contact" title="Seattle Super Foods | Contact">Contact</a></li>
    <li><a href="/Cart/index" title="Seattle Super Foods | Cart">Cart</a></li>
}
<div id="page">

    <div id="main-content">

        <!-- begin main content -->

        <h2>Contact Us</h2>
        <p>Feel free to give us a call toll-free at <strong>1(800) 414-3610</strong> or <strong>(206) 243-7192</strong>, or email us using the form below.</p>
        <p>&nbsp;</p>
        @using (Html.BeginForm())
        {

            @Html.ValidationSummary()
            <fieldset>
                <legend>FirstSuperFoods WebForm</legend>
                <p>Your name (not required)<br />
                <p>@Html.LabelFor(x => x.Name): @Html.EditorFor(x => x.Name)</p>
                <p>@Html.LabelFor(x => x.From): @Html.EditorFor(x => x.From)</p>
                <p>@Html.LabelFor(x => x.Subject): @Html.EditorFor(x => x.Subject)</p>
                <p>@Html.LabelFor(x => x.Message): @Html.TextAreaFor(x => x.Message)</p>

                <p align="center">
                    <input class="actionButtons" type="submit" value="Send" />
                </p>
            </fieldset>
        }
    </div>

    <div id="main-sidebar">

        <!-- being sidebar content -->
        <div class="sidebar-box">
            <h4>Links</h4>
            <ul>
                <li><a href="http://www.supersup.com" title="spyka Webmaster resources" target="_blank">Super Supplements</a></li>
                <li><a href="http://www.emeraldcitysmoothie.com/" title="free web templates" target="_blank">Emerald City Smoothie</a></li>
                <li></li>

            </ul>
        </div>
        <!-- end sidebar content -->

    </div>

    <div class="clear"></div>
    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
